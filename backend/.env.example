# Server Configuration
NODE_ENV=development
PORT=5001
BACKEND_URL=http://localhost:5001
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/balkanestate

# JWT Secret
JWT_SECRET=your-secret-key-change-this-in-production

# AI Features (Required for AI search and property insights)
GEMINI_API_KEY=your-google-gemini-api-key-here

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple OAuth (Optional)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/apple/private/key

# Google Play In-App Purchases (Optional)
GOOGLE_PLAY_CLIENT_EMAIL=your-service-account-email
GOOGLE_PLAY_PRIVATE_KEY=your-service-account-private-key
GOOGLE_PLAY_PACKAGE_NAME=com.balkanestate.app

# Apple App Store In-App Purchases (Optional)
APP_STORE_ISSUER_ID=your-app-store-issuer-id
APP_STORE_KEY_ID=your-app-store-key-id
APP_STORE_PRIVATE_KEY=your-app-store-private-key
APP_STORE_BUNDLE_ID=com.balkanestate.app
APP_STORE_ENVIRONMENT=sandbox

# Stripe (Optional - for web payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Background Workers
ENABLE_RECONCILIATION=false
